mixin product(img, title, p)
    .product
        img(src=img)
        h2=title
        p=p

<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="style.css")
        title Hearthstone
    body
        .banner
            ul
                li #[a(herf="#") 對戰區]
                li #[a(herf="#") 資料片]
                li#LOGO  #[a(herf="#") Hearthstone]
                li #[a(herf="#") 砸錢區]
                li #[a(herf="#") 爐邊聚會]
        .content
            .title
                h1 噁心排組
                p 擁有這些牌讓你躺著贏
            .productBox
                +product("images/project1.png" ,"伊利丹", "被光明背叛")
                +product("images/project2.png" ,"聖騎牌", "擁有一切聖光")
                +product("images/project3.png" ,"小恐龍", "就是原始小恐龍")
            .about 
                .pic    
                    img(src="images/project4.png", alt="傲慢知人簡介")
                .message
                    h2 傲慢知人簡介
                    ul
                      li 我很傲慢 
                      li 其他人都在亂打 
                      li 我愛月希 
                      li 我唱歌很好聽
            footer
                img(src="images/01.png", alt="傲慢知人簡介")
                div &copy; 2019 roger